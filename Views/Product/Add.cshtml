@{
    ViewData["Title"] = "Add";
}
@model ProductViewModel
<h1>Ürün Ekleme</h1>

<div asp-validation-summary="ModelOnly"></div>

<form asp-controller="Product" asp-action="Add" method="post">

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Ürün İsmi</label>
        <input asp-for="Name" class="form-control">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Fiyat</label>
        <input asp-for="Price" class="form-control">
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Stock" class="form-label">Stok</label>
        <input type="number" asp-for="Stock" class="form-control">
        <span class="text-danger" asp-validation-for="Stock"></span>
    </div>
    <div class="mb-3">
        <option selected>Renk Seçiniz</option>
        <select class="form-select" asp-for="Color" asp-items="@ViewBag.ColorSelect"></select>
        <span class="text-danger" asp-validation-for="Color"></span>
    </div>

    <div class="form-check">
        <input class="form-check-input" asp-for="IsPublish">
        <label class="form-check-label" asp-for="IsPublish">
            Yayınlansın mı ?
        </label>
    </div>

    <div class="mb-3 mt-3">
        <span class="mb-1">Ürün kaç ay Satışta Kalacak ?</span>
        @foreach (var item in ViewBag.Expire as Dictionary<string, int>)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Expire" value="@item.Value">
                <label class="form-check-label">
                    @item.Key
                </label>
            </div>
        }
        <span class="text-danger" asp-validation-for="Expire"></span>
    </div>



    <div class="form-floating mb-3">
        <textarea asp-for="Describtion" class="form-control" placeholder="Ürün Açıklama" style="height: 100px"></textarea>
        <label asp-for="Describtion">Ürün açıklama</label>
        <span class="text-danger" asp-validation-for="Describtion"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PublishDate" class="form-label">Yayın Tarihi</label>
        <input asp-for="PublishDate" class="form-control">
        <span class="text-danger" asp-validation-for="PublishDate"></span>
    </div>

    <button type="submit" class="btn btn-primary mb-3">Ürün Kaydet</button>


</form>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}