
@{
    ViewData["Title"] = "GetById";
}
@model ProductViewModel

<a class="btn btn-primary mb-2" asp-controller="Product" asp-action="Index">Ürünler Sayfasına git</a>

<div class="card">
    <div class="card-header">
        @Model.Name
    </div>
    <div class="card-body">
        <p class="card-text">
            <div>Açıklama: @Model.Describtion</div>
            <div>Fiyat: @Model.Price</div>
            <div>Stok: @Model.Stock</div>
            <div>Renk: @Model.Color</div>   
        </p>
    </div>
</div>